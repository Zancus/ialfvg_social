<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.barker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".barker.BarkerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".barker.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".barker.DetailActivity" />
        <activity
            android:name=".barker.Login"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".barker.Registration"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="it.barker.users.DettaglioUtenteActivity"
            android:label="@string/title_activity_dettaglio_bark" >
        </activity>
    </application>

</manifest>
